<!DOCTYPE html>
<html lang="en" ng-app="Whizzrd">
<head>
	<meta charset="utf-8">
 	<meta http-equiv="X-UA-Compatible" content="IE=edge">
 	<meta name="viewport" content="width=device-width, initial-scale=1">
 	<meta name="description" content="">
 	<meta name="author" content="">
 	<title>Whizzrd</title>
 	<!-- Bootstrap core CSS -->
 	<link href="/libs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Static navbar -->
   	<nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          	<div class="navbar-header">
            	<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              		<span class="sr-only">Toggle navigation</span>
              		<span class="icon-bar"></span>
              		<span class="icon-bar"></span>
              		<span class="icon-bar"></span>
            	</button>
            	<a class="navbar-brand" href="/secure/index">Whizzrd.com</a>
          	</div>
          	<div id="navbar" class="navbar-collapse collapse">
            	<ul class="nav navbar-nav">
            		<li><a href="/secure/index">Home</a></li>
              		<li class="active"><a href="/secure/venue">Venues</a></li>
              		<li class="dropdown">
                     <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Services <span class="caret"></span></a>
                     <ul class="dropdown-menu">
                       <li><a href="/secure/main-service">Service</a></li>
                       <li><a href="/secure/service">Settings</a></li>
                     </ul>
                  </li>
                  <li><a href="/secure/employee">Employee</a></li>
                  <li><a href="/secure/bookings">Bookings</a></li>
            	</ul>
            	<ul class="nav navbar-nav navbar-right">
              		<li><a href="/auth/logout">logout (<%= user.local.name %>)</a></li>
            	</ul>
          	</div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
	<!-- body starts here -->
	<div class="container" ng-controller="venueController" style="padding-top: 100px">
	   
         <button type="button" ng-click="viewLocation =! viewLocation; viewCity =! viewCity" class="btn btn-default" ng-show="viewLocation">View Location</button>

         <button type="button" ng-click="viewLocation =! viewLocation; viewCity =! viewCity" class="btn btn-default" ng-show="!viewCity">View City</button> <BR><BR>

         <!-- Adding State and City  -->
         <div ng-show="viewCity">
            <div class="row">
               <div class="col-xs-12 col-md-8">
                  <table class="table table-bordered table-hover">
                     <thead>
                        <tr> 
                           <th>S.no</th>
                           <th>State</th>
                           <th>City</th>
                           <th>Action</th>
                        </tr>
                     </thead>
                     <tbody>
                        <tr ng-repeat="city in citylist">
                           <td>{{$index+1}}</td>
                           <td>{{city.state}}</td>
                           <td>{{city.city}}</td>
                           <td>
                              <button type="button" ng-click="EditCity(city._id)" class="btn btn-primary">Edit</button>
                              <button type="button" ng-click="DeleteCity(city._id)" class="btn btn-danger">Delete</button>
                           </td>
                        </tr>
                     </tbody>
                  </table>
               </div>
               <div class="col-xs-6 col-md-4">
                  <form action="" method="POST" role="form">
                     <legend>Add City</legend>
                  
                     <div class="form-group">
                        <label for="">State</label>
                        <input type="text" ng-model="city.state" id="input" class="form-control" value="" placeholder="Enter state name">
                     </div>

                     <div class="form-group">
                        <label for="">City</label>
                        <input type="text" ng-model="city.city" id="input" class="form-control" value="" placeholder="Enter city name">
                     </div>
                     
                     <button type="button" ng-disabled="city.state == undefined || city.city == undefined" ng-click="AddCity()" class="btn btn-success">Create</button>
                     <button type="button" ng-click="UpdateCity()" class="btn btn-warning">Update</button>
                  </form>
               </div>
            </div>
        </div>
        <!-- End of Adding State and City -->
        
        <!-- Adding Area -->
         <div ng-show="!viewLocation">

            <div class="row">
               <div class="col-xs-12 col-md-8">
                  <table class="table table-bordered table-hover">
                     <thead>
                        <tr>
                           <th>S.no</th>
                           <th>City</th>
                           <th>Area</th>
                           <th>Action</th>
                        </tr>
                     </thead>
                     <tbody>
                        <tr ng-repeat="area in arealist">
                           <td>{{$index+1}}</td>
                           <td>{{area.city_name}}</td>
                           <td>{{area.area_name}}</td>
                           <td>
                              <button type="button" ng-click="EditLocation(area._id)" class="btn btn-primary">Edit</button>
                              <button type="button" ng-click="DeleteLocation(area._id)" class="btn btn-danger">Delete</button>
                           </td>
                        </tr>
                     </tbody>
                  </table>
               </div>
               <div class="col-xs-6 col-md-4">
                  <form role="form">
                     <legend>Add Areas</legend>
                  
                     <div class="form-group">
                        <label for="">City Name</label>
                        <select ng-model="location.city_name" id="input" class="form-control">
                           <option value="">Select City</option>
                           <option ng-repeat="city in citylist" value="{{city.city}}">{{city.city}}</option>
                        </select>
                     </div>

                     <div class="form-group">
                        <label for="">Area Name</label>
                        <input ng-model="location.area_name" type="text" name="" id="input" class="form-control" value="" placeholder="Enter Area name">
                     </div>
                     
                     <button type="button" ng-click="AddLocation()" class="btn btn-success" ng-disabled="location.city_name == undefined || location.area_name == undefined">Create</button>
                     <button type="button" ng-click="UpdateLocation()" class="btn btn-warning">Update</button>

                  </form>
               </div>
            </div>


            
        </div>
        <!-- End of Adding Area -->

    </div> <!-- /container -->


    <!-- Bootstrap core JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Angular Core Script -->
    <script src="/libs/angular/angular.min.js"></script>
    <!-- Angular User Script -->
     <script src="/js/controllers/venueController.js"></script>
</body>
</html>