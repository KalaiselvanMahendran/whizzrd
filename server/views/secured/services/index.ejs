<!DOCTYPE html>
<html lang="en" ng-app="Whizzrd">
<head>
	<meta charset="utf-8">
 	<meta http-equiv="X-UA-Compatible" content="IE=edge">
 	<meta name="viewport" content="width=device-width, initial-scale=1">
 	<meta name="description" content="">
 	<meta name="author" content="">
 	<title>Whizzrd</title>
 	<!-- Bootstrap core CSS -->
 	<link href="/libs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
   <!-- Static navbar -->
   <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              	<span class="sr-only">Toggle navigation</span>
              	<span class="icon-bar"></span>
              	<span class="icon-bar"></span>
              	<span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/secure/index">Whizzrd.com</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
            	<li><a href="/secure/index">Home</a></li>
              	<li><a href="/secure/venue">Venues</a></li>
              	<li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Services <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/secure/main-service">Service</a></li>
                    <li class="active"><a href="/secure/service">Settings</a></li>
                  </ul>
                </li>
                <li><a href="/secure/employee">Employee</a></li>
                <li><a href="/secure/bookings">Bookings</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              	<li><a href="/auth/logout">logout (<%= user.local.name %>)</a></li>
            </ul>
          </div><!--/.nav-collapse -->
      </div><!--/.container-fluid -->
   </nav>
   <!-- End of Navbar -->

	<!-- body starts here -->
	<div class="container" ng-controller="serviceController" style="padding-top: 100px">
	   
      <button type="button" ng-click="viewServices =! viewServices; viewSpecification =! viewSpecification" class="btn btn-default" ng-show="viewServices">View Services</button>

      <button type="button" ng-click="viewSpecification =! viewSpecification; viewServices =! viewServices" class="btn btn-default" ng-show="!viewSpecification">View Specification</button> 

      <BR><BR>
   
      <div ng-show="!viewServices">
         <div class="row">
            <div class="col-md-8">
               <table class="table table-bordered table-hover">
                  <thead>
                     <tr>
                        <th>S.no</th>
                        <th>Service Name</th>
                        <th>Action</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr ng-repeat="service in servicelist">
                        <td>{{$index+1}}</td>
                        <td>{{service.service_name}}</td>
                        <td>
                           <button type="button" ng-click="EditService(service._id)" class="btn btn-primary">Edit</button>
                           <button type="button" ng-click="DeleteService(service._id)" class="btn btn-danger">Delete</button>
                        </td>
                     </tr>
                  </tbody>
               </table>
            </div>
            <div class="col-md-4">
               <form role="form">
                  <legend>Add Services</legend>
               
                  <div class="form-group">
                     <label for="">Service Name</label>
                     <input type="text" ng-model="service.service_name" class="form-control" id="" placeholder="Enter service name">
                  </div>
               
                  <button type="button" ng-click="AddService()" class="btn btn-primary">Add</button>
                  <button type="button" ng-click="UpdateService()" class="btn btn-warning">Update</button>
               </form>
            </div>
         </div>
      </div>

      <div ng-show="viewSpecification">
         <div class="row">
            <div class="col-md-8">
               <table class="table table-bordered table-hover">
                  <thead>
                     <tr>
                        <th>S.no</th>
                        <th>Specification</th>
                        <th>Action</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr ng-repeat="specification in specificationlist">
                        <td>{{$index+1}}</td>
                        <td>{{specification.specification_name}}</td>
                        <td>
                           <button type="button" ng-click="EditSpecification(specification._id)" class="btn btn-primary">Edit</button>
                           <button type="button" ng-click="DeleteSpecification(specification._id)" class="btn btn-danger">Delete</button>
                        </td>
                     </tr>
                  </tbody>
               </table>
            </div>
            <div class="col-md-4">
               <form role="form">
                  <legend>Add Specification</legend>
               
                  <div class="form-group">
                     <label for="">Specification Name</label>
                     <input type="text" ng-model="specification.specification_name" class="form-control" id="" placeholder="Enter Specification">
                  </div>
               
                  <button type="button" ng-click="AddSpecification()" class="btn btn-primary">Add</button>
                  <button type="button" ng-click="UpdateSpecification()" class="btn btn-warning">Update</button>
               </form>
            </div>
         </div>
      </div>


   </div> <!-- /container -->


   <!-- Bootstrap core JavaScript -->
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
   <script src="/libs/bootstrap/dist/js/bootstrap.min.js"></script>
   <!-- Angular Core Script -->
   <script src="/libs/angular/angular.min.js"></script>
   <!-- Angular User Script -->
   <script src="/js/controllers/serviceController.js"></script>
</body>
</html>