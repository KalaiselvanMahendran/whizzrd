	<!-- body starts here -->
	<script> x="<%= user._id %>"; </script>
	<div class="container" ng-controller="myBookingsController" style="padding-top: 100px">
		<a class="btn btn-success" href="/newBooking" role="button">New Order</a> <br><br>

		<div class="panel panel-default" ng-repeat="order in orders">
			<div class="panel-body">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Service</th>
							<th>Specifications</th>
							<th>Booking Date</th>
							<th>Booking Time</th>
							<th>Status</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>{{order.service_name}}</td>
							<td>
				            <div ng-repeat="(key, value) in order.specifications">
				              <div>{{value}}</div>
				            </div>
				         </td>
				         <td>{{order.booking_date}}</td>
				         <td>{{order.booking_time}}</td>
				         <td>{{order.status}}</td>
				         <td>
				         	<button type="button" class="btn btn-danger">Cancel Order</button>
				         </td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>

   </div> <!-- /container -->


   <!-- Bootstrap core JavaScript -->
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
